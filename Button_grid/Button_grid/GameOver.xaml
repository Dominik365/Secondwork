<Window x:Class="Button_grid.GameOver"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Button_grid"
        mc:Ignorable="d"
        Title="GameOver" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Margin="30" Grid.Column="1" Grid.Row="1" Content="New Game" FontFamily="Arial" FontSize="20" Click="New_game"/>
        <Button Margin="30" Grid.Column="1" Grid.Row="2" Content="Exit" FontFamily="Arial" FontSize="20" Click="Exit"/>
    </Grid>
</Window>
